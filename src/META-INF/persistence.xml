<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="LojinhaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>lojinha.model.TelefonesForn</class>
    <class>lojinha.model.Vendas</class>
    <class>lojinha.model.Produtos</class>
    <class>lojinha.model.EnderecosCli</class>
    <class>lojinha.model.EnderecosForn</class>
    <class>lojinha.model.TelefonesCli</class>
    <class>lojinha.model.Fornecedores</class>
    <class>lojinha.model.VendasProdutos</class>
    <class>lojinha.model.ProdutosFornecedores</class>
    <class>lojinha.model.Vendedores</class>
    <class>lojinha.model.Cliente</class>
    <class>lojinha.model.Telefone</class>
    <class>lojinha.model.TelefoneFornecedores</class>
    <class>lojinha.model.Valor</class>
    <class>lojinha.model.Qtd</class>
    <class>lojinha.model.Endereco</class>
    <class>lojinha.model.EnderecoFornecedor</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/fxlojinha"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
